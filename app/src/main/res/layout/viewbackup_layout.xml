<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:theme="@style/ToolBar"
        app:popupTheme="@style/ToolBar"
        android:background="@color/colorSecondary"
        android:elevation="4dp"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="10dp"
        >
        <ImageView
            android:id="@+id/b2Image"
            android:layout_width="512px"
            android:layout_height="512px"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/imageoutline"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/fbImage"
            android:layout_width="512px"
            android:layout_height="512px"
            android:background="@drawable/imageoutline"
            tools:srcCompat="@tools:sample/avatars" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="10dp"
        >

        <TextView
        android:id="@+id/b2Text"
        android:layout_gravity="center"
        android:gravity="right"
        android:textStyle="italic"
        android:layout_width="512px"
        android:layout_height="wrap_content"
        android:text="@string/b2Backup" />

        <TextView
            android:id="@+id/fbText"
            android:layout_gravity="center"
            android:gravity="right"
            android:textStyle="italic"
            android:layout_width="512px"
            android:layout_height="wrap_content"
            android:text="@string/fbBackup" />


    </LinearLayout>



    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="@string/backupTitle"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="10dp"/>


        <TextView
            android:id="@+id/titleText"
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="default text"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"

            android:text="@string/backupDesc"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/descText"
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="default text"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"

            android:text="@string/createdBy"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/createdText"
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="default text"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="@string/shaHash"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/shaText"
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="default text"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="@string/timeStamp"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/timeText"
            android:layout_width="285dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:fontFamily="sans-serif"
            android:textStyle="italic"
            android:text="default text"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>

    <!-- TODO: add switches for encryption, etc(?) -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="135dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteBackup_button"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorSecondary"
        android:text="@string/deleteBackup"
        android:textColor="#ffffff"
        app:cornerRadius="20dp" />

</LinearLayout>